doctype html
html
  head
    title Forecast Slack Bot
    link(rel="stylesheet" href="/styles/main.css" type="text/css")
    link(rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Ubuntu:400,300")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="icon" type="image/png" href="/icons/black/png/16x16/mostlysunny.png")
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-96837385-1', 'auto');
      ga('send', 'pageview');
  body
    .container.container--center
      .logo
        include ../public/icons/white/svg/partlycloudy.svg
      h1 Forecast
      .blurb A weather bot for Slack
      .directions
        .step

          a(href="https://slack.com/oauth/authorize?scope=commands&client_id=" + process.env.SLACK_CLIENT_ID + "&redirect_uri=" + process.env.REDIRECT_URI)
            .add-to-slack
              img(alt="Add to Slack" height="50" src="/icons/slack_icon.png")
              .text
                | Add to Slack
        .line
          include ../public/icons/line.svg
        .step
          .screenshot
            img(src="/icons/message.png").slack
        .line
          include ../public/icons/line.svg
        .step
          .screenshot
            img(src="/icons/response.png").slack
      footer
        .sb
          a(href="https://brandonmathis.me")
            br
            | Created By Brandon Mathis
        ul
          li
            | &nbsp;
            a(href="https://darksky.net/poweredby/")
              | Powered by DarkSky 
          li
            a(href="/help")
              | Need Help?
